@using ChatRooms.ViewModels;
@model UserIndexViewModel

@{
    ViewData["Title"] = "Profile";
}

<div class="text-center">
    <h1 class="display-4">Profile</h1>
</div>

<section style="background-color: #222222;">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card" style="border-radius: 15px; background-color: rgb(68, 68, 68);">
                    <div class="card-body p-4">
                        <div class="d-flex flex-column flex-md-row align-items-center">
                            <div class="mb-3 mb-md-0">
                                @if (Model.ProfileImageUrl != null)
                                {
                                    <img src="@Model.ProfileImageUrl" alt="Profile Picture" class="img-fluid rounded-circle" style="max-width: 180px;">
                                }
                                else
                                {
                                    <img src="~/images/profile-picture-placeholder.png" alt="Profile Picture" class="img-fluid rounded-circle" style="max-width: 180px;">
                                }
                            </div>
                            <div class="ms-md-3">
                                <h5 class="mb-1" style="color: white; font-weight: bold;font-size: 1.1em;">
                                    @Model.UserName
                                </h5>
                                <p class="mb-2 pb-1" style="color: #f2f2f2;">Resident Chatter</p>
                                <div class="d-flex flex-wrap">
                                    <div class="mb-2 me-3">
                                        <p class="small mb-1" style="color: whitesmoke">Owned Chatrooms</p>
                                        <p class="mb-0" style="color: white; font-weight: bold;">@Model.OwnedChatrooms</p>
                                    </div>
                                    <div class="mb-2 me-3">
                                        <p class="small mb-1" style="color: whitesmoke">Pinned Chatrooms</p>
                                        <p class="mb-0" style="color: white; font-weight: bold;">@Model.PinnedChatrooms</p>
                                    </div>
                                    <div class="mb-2">
                                        <p class="small mb-1" style="color: whitesmoke">Total Messages</p>
                                        <p class="mb-0" style="color: white; font-weight: bold;">@Model.UserMessages</p>
                                    </div>
                                </div>
                                <div class="d-flex pt-1">
                                    <a asp-area="" asp-controller="User" asp-action="Edit" asp-route-id="@Model.Id" type="button" class="btn btn-primary flex-grow-1 me-2">Edit</a>
                                    <a asp-area="" asp-controller="User" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger flex-grow-1">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}